{
  "name": "ckb-sdk.js",
  "scripts": {
    "cm": "git-cz",
    "publish": "lerna run tsc && lerna publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*/**/*.{js,ts,json,md}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/node": "^10.12.15",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "^5.10.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.2.1",
    "lerna": "^3.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "typescript": "^3.2.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
